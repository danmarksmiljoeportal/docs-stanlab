@page
@model Dmp.Stanlab.References.ReportingApi.Pages.SampleModel

<h2>@Model.SampleItem.Item.SampleId</h2>

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-page="/Index">Samples</a></li>
    <li class="breadcrumb-item active">@Model.SampleItem.Item.SampleId</li>
</ol>

<hr>

<div class="row">
    <div class="col-lg-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Label</th>
                    <th scope="col">Location</th>
                    <th scope="col">Matrix</th>
                    <th scope="col">Purpose</th>
                    <th scope="col">Sampling</th>
                    <th scope="col">Observation facility</th>
                    <th scope="col">Laboratory test references</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-active">
                    <td>@Model.SampleItem.Item.Label</td>
                    <td>@Model.SampleItem.Item.Location</td>
                    <td>@Model.SampleItem.Item.Matrix</td>
                    <td>@Model.SampleItem.Item.Purpose</td>
                    <td>
                        <p>Equipment: @Model.SampleItem.Item.Sampling.Equipment</p>
                        <p>Method: @Model.SampleItem.Item.Sampling.Method</p>
                        <span>Started: @Model.SampleItem.Item.Sampling.SamplingStarted</span>
                        <span>Ended: @Model.SampleItem.Item.Sampling.SamplingEnded</span>
                        <p>Sampler: @Model.SampleItem.Item.Sampling.Sampler.Person</p>
                    </td>
                    <td>
                        <p>Name: @Model.SampleItem.Item.ObservationFacility.Name</p>
                        <p>Id: @Model.SampleItem.Item.ObservationFacility.ObservationFacilityId</p>
                    </td>
                    <td>
                        @foreach (var laboratoryTest in Model.SampleItem.Item.LaboratoryTests)
                        {
                            <span class="badge badge-info text-monospace">@laboratoryTest.Reference</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>