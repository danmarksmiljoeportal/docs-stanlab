@page
@model Dmp.Stanlab.References.ReportingApi.Pages.IndexModel

<h2>Samples</h2>

<ol class="breadcrumb">
    <li class="breadcrumb-item active">Samples</li>
</ol>


<div class="row">
    <div class="col-lg-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Sample ID</th>
                    <th scope="col">Submitted</th>
                    <th scope="col">Label</th>
                    <th scope="col">Observation Facility</th>
                    <th scope="col">Location</th>
                    <th scope="col">Laboratory tests</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sample in Model.SampleItems)
                {
                <tr>
                    <td><a asp-page="/Sample" asp-route-sampleId="@sample.Item.SampleId">@sample.Item.SampleId</a></td>
                    <td>@sample.SubmittedTime.ToString("dd/MM/yyyy HH:mm", System.Globalization.CultureInfo.InvariantCulture)</td>
                    <td>@sample.Item.Label</td>
                    <td>@sample.Item.ObservationFacility.ObservationFacilityId</td>
                    <td>@sample.Item.Location</td>
                    <td>
                        @foreach (var laboratoryTest in sample.Item.LaboratoryTests)
                        {
                            <span class="badge badge-info">@laboratoryTest.Reference</span>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>