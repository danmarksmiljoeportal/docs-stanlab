@page
@model Dmp.Stanlab.References.RequisitionApi.Pages.IndexModel

<h2>Requisitions</h2>

<ol class="breadcrumb">
    <li class="breadcrumb-item active">Requisitions</li>
</ol>


<div class="row">
    <div class="col-lg-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Reference</th>
                    <th scope="col">Time</th>
                    <th scope="col">Applicant</th>
                    <th scope="col">Contract reference</th>
                    <th scope="col">Billing account reference</th>
                    <th scope="col">Analysis Packages</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var request in Model.Items)
                    {
                        <tr>
                            <td><a asp-page="/Requisition" asp-route-reference="@request.Reference">@request.Reference</a></td>
                            <td>@request.SubmittedTime.ToString("dd/MM/yyyy HH:mm", System.Globalization.CultureInfo.InvariantCulture)</td>
                            <td>@request.Request.SamplingContact.Person</td>
                            <td>@request.Request.ContractReference</td>
                            <td>@request.Request.BillingAccountReference</td>
                            <td>
                                @foreach (var analysis in request.Request.Packages)
                                {
                                    <span class="badge badge-info text-monospace">@analysis.Fingerprint</span>
                                }
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>